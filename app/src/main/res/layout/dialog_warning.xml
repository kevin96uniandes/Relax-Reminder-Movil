<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20sp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/sucess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Remover alarma?"
        android:layout_gravity="center"
        android:textColor="@color/rr_text"/>

    <TextView
        android:id="@+id/tv_msg_dialog_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/rr_text"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/black"
            android:backgroundTint="@color/rr_no"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            app:rippleColor="@color/rr_no"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Si"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/rr_background_item_list"
            android:backgroundTint="@color/rr_si"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            app:rippleColor="@color/rr_ripple_effect_primary"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>